#include<stdio.h>
int main()
{
    int arr[100],pos,value,i,n;
    printf("enter limit:");
    scanf("%d",&n);
    printf("enter the value:");
    for(i=0;i<n;i++)
    {
          scanf("%d",&arr[i]);
    }
   printf("enter the position:");
    scanf("%d",&pos);
    printf("enter the value:");
    scanf("%d",&value);
    for(i=n;i>=pos;i--)
    {
        arr[i]=arr[i-1];
    }
    arr[pos-1]=value;
    for(i=0;i<n+1;i++)
    {
        printf("%d ",arr[i]);
    }

}
